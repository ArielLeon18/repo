<!DOCTYPE html>

    <head>

        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="../css/productos-listado.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

        <link rel="stylesheet" href="../css/header.css">
        <link rel="stylesheet" href="../css/footer.css">
        <%- include('../partials/head'); %>

    </head>

    <body class="listado-body">

        <header>
            <%- include('../partials/header'); %>
        </header>


        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Basado en tu Ãºltima visita</h2>
                </div>
                <!-- Show the "visited" products -->
                <% for(let p of productos) { %> 
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/products/detalle/<%= p.id %>">
                            <figure class="product-box_image">
                                <img src="/images/productos/<%= p.image %>" alt="imagen de producto">
                            </figure>
                            <article class="product-box_data">
                                <h2>$<%= p.price %></h2>
                                <span><%= p.discount %> % OFF</span>
                                <p><%= p.name %></p>
                                <i class="fas fa-truck"></i>
                            </article>
                        </a>
                    </section>
                </div>
                <% } %> 
            </div>
        </div>
            
        <footer>
            <%- include('../partials/footer'); %>
        </footer>

    </body>

</html>
